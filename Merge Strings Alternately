class Solution {
    public String mergeAlternately(String word1, String word2) {
        int l = 0 , r = 0;
        int m = word1.length() , n = word2.length();
        StringBuilder res = new StringBuilder();
        while(l<m||r<n){
            if(l<m) res.append(word1.charAt(l));l++;
            if(r<n) res.append(word2.charAt(r));r++;
        }
        return res.toString();
    }
}
