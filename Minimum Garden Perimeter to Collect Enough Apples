class Solution {
    public long totalApples(long k) {
        return 2 * k * (k + 1) * (2 * k + 1);
    }

    public int minimumPerimeter(long neededApples) {
        long left = 1, right = 1_000_000;

        while (left < right) {
            long mid = (left + right) / 2;
            if (totalApples(mid) >= neededApples) {
                right = mid;
            } else {
                left = mid + 1;
            }
        }

        return (int)(8 * left);
    }
}
